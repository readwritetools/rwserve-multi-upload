template {
	eximjs 		eximjs <source> <dest>
	ghfm		blue compile <source> <dest> --emit=ghfm
}

// ---------- rewrite export/import (src) ---------- 
recurse {
	source    '../src'
	dest      '../dbg'
	overwrite older
	exec      eximjs
}

// ---------- look for cruft in dbg compared to original src ---------- 
compare {
	source    '../dbg'
	dest      '../src'
}

// ---------- copy dbg to srv/rwserve-plugin for in-place testing ---------- 
copy {
	source    '../dbg'
	dest      '/srv/rwserve-plugins/node_modules/rwserve-multi-upload/dist'
	overwrite older
}

// ---------- copy package.json to srv/rwserve-plugin for in-place testing ---------- 
copy {
	source    '../package.json'
	dest      '/srv/rwserve-plugins/node_modules/rwserve-multi-upload/package.json'
	overwrite older
}

// ---------- Convert blue document into Github Flavored readme.md ---------- 
recurse {
	source '/palau/www/rwserve.readwritetools.com/plugins/ghfm/rwserve-multi-upload.blue'
	dest   '../readme.md' 
	overwrite older
	exec ghfm
}
